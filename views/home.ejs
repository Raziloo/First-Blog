<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <% if (post) { %>
        <p>
            <% if (post.content && post.content.length > 100) { %>
                <%= post.content.substring(0, 100) + " ..." %>
            <% } else { %>
                <%= post.content %>
            <% } %>
            <a href="/posts/<%= post._id %>">Read More</a>
        </p>
    <% } %>


    <% }) %>


<%- include("partials/footer"); -%>
